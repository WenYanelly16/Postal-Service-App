<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Postal Service</title>
  <link rel="stylesheet" href="styles.css"> 
</head>
<body>
    <div class="container">
        <h1>Postal Service System</h1>
        
        <div class="btn-group">
            <button class="btn" onclick="showSection('addPackage')">Add Package</button>
            <button class="btn" onclick="showSection('viewPackages')">View Packages</button>
            <button class="btn" onclick="showSection('viewLabel')">View Label</button>
            <button class="btn" onclick="showSection('calculateCost')">Calculate Cost</button>
        </div>

        <!-- Add Package Section -->
        <div id="addPackage" class="section active">
            <h2>Add New Package</h2>
            <form id="packageForm">
                <div class="form-group">
                    <label for="senderName">Sender Name:</label>
                    <input type="text" id="senderName" required>
                </div>
                
                <div class="form-group">
                    <label for="receiverName">Receiver Name:</label>
                    <input type="text" id="receiverName" required>
                </div>
                
                <div class="form-group">
                    <label for="senderAddress">Sender Address:</label>
                    <input type="text" id="senderAddress" required>
                </div>
                
                <div class="form-group">
                    <label for="receiverAddress">Receiver Address:</label>
                    <input type="text" id="receiverAddress" required>
                </div>
                
                <div class="form-group">
                    <label for="weight">Weight (kg):</label>
                    <input type="number" id="weight" step="0.01" min="0.01" required>
                </div>
                
                <div class="form-group">
                    <label for="costPerUnitWeight">Cost per kg:</label>
                    <input type="number" id="costPerUnitWeight" step="0.01" min="0.01" value="5.00">
                </div>
                
                <div class="form-group">
                    <label for="shippingMethod">Shipping Method:</label>
                    <select id="shippingMethod" required>
                        <option value="two-day">Two Day (+$10)</option>
                        <option value="one-day">One Day (+$15)</option>
                    </select>
                </div>
                
                <button type="submit" class="btn btn-success">Create Package</button>
                <div id="formMessage" class="message"></div>
            </form>
        </div>

        <!-- View Packages Section -->
        <div id="viewPackages" class="section">
            <h2>All Packages</h2>
            <ul id="packageList"></ul>
        </div>

        <!-- View Label Section -->
        <div id="viewLabel" class="section">
            <h2>View Shipping Label</h2>
            <div class="form-group">
                <label for="trackingInput">Enter Tracking Number:</label>
                <input type="text" id="trackingInput">
            </div>
            <button class="btn" onclick="getPackageLabel()">Get Label</button>
            <div id="labelContainer" style="display: none;"></div>
        </div>

        <!-- Calculate Cost Section -->
        <div id="calculateCost" class="section">
            <h2>Calculate Shipping Cost</h2>
            <div class="form-group">
                <label for="calcWeight">Weight (kg):</label>
                <input type="number" id="calcWeight" step="0.01" min="0.01" required>
            </div>
            
            <div class="form-group">
                <label for="calcShippingMethod">Shipping Method:</label>
                <select id="calcShippingMethod" required>
                    <option value="two-day">Two Day (+$10)</option>
                    <option value="one-day">One Day (+$15)</option>
                </select>
            </div>
            
            <button class="btn" onclick="calculateShippingCost()">Calculate</button>
            <div id="costResult" style="margin-top: 20px;"></div>
        </div>
    </div>

    <script src="script.js"></script>
</body>
</html>